const express = require('express');
const router = express.Router();
// const itemController = require('../controllers/itemController'); // Lowercase c
const itemController = require('../controllers/itemcontroller'); // Lowercase c

router.post('/', itemController.createItem); // POST /api/items
router.get('/', itemController.getItems);   // GET /api/items
router.put('/:item_id', itemController.updateItem); // PUT /api/items/:item_id

module.exports = router;